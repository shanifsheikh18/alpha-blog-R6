<h1 class="text-center mt-4">Showing Article</h1>

    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-3 bg-white rounded">
                <div class="card-header fst-italic">
                    by shanif nadeem
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= @article.title %></h5>
                    <div class="card-text"><%= simple_format(@article.description) %></div>

                    <%= link_to "Back to articles", articles_path, class:"btn btn-outline-success" %>
                    <%= link_to "Edit", edit_article_path(@article), class:"btn btn-outline-primary" %>
                    <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            
                </div>
                
                <div class="card-footer text-body-secondary">
                    <small>Created <%= time_ago_in_words(@article.created_at) %>
                    edited <%= time_ago_in_words(@article.updated_at) %>
                    </small>
                </div>
            </div>
        </div>
    </div>

<div class="text-center mb-5">
    <div>
    <%= link_to "Create New article", new_article_path %> ||
    <%= link_to "Go to Home page", root_path %>
    </div>
</div>