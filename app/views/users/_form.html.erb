<div class="container">


  <%= render 'shared/errors', obj: @user %>

  <%= form_with(model: @user, local: true,) do |form| %>

    <div class="input-group row mb-2">
      <%= form.label :username, class: "col-2 col-form-label text-dark fw-bold shadow rounded" %>
      <div class="col-10">
        <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
      </div>
    </div>

    <div class="input-group row mb-2">
      <%= form.label :email, class: "col-2 col-form-label text-dark fw-bold shadow rounded h-25" %>
      <div class="col-10"> 
        <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
      </div>
    </div>

    <div class="input-group row mb-2">
      <%= form.label :password, class: " col-2 col-form-label text-dark fw-bold shadow rounded h-25" %>
      <div class="col-10"> 
        <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
      </div>
    </div>

    <div class="input-group row justify-content-center my-3">
      <%= form.submit(@user.new_record? ? 'sign up': 'update account', class: "btn btn-primary py-2 px-4 w-25") %>
    </div>

  <% end %>

</div>