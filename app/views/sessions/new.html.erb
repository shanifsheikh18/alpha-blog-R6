<h1 class="text-center my-4" >Log in for Alpha Blog</h1>

<div class="container">

  <%= form_with(scope: :session, url: login_path, local: true,) do |form| %>

    <div class="input-group row mb-2">
      <%= form.label :email, class: "col-2 col-form-label text-dark fw-bold shadow rounded h-25" %>
      <div class="col-10"> 
        <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
      </div>
    </div>

    <div class="input-group row mb-2">
      <%= form.label :password, class: " col-2 col-form-label text-dark fw-bold shadow rounded h-25" %>
      <div class="col-10"> 
        <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
      </div>
    </div>

    <div class="input-group row justify-content-center my-3">
      <%= form.submit 'Login', class: "btn btn-primary py-2 px-4 w-25" %>
    </div>

  <% end %>

    <div class="text-center">
        <%= link_to "Cancel and return to articles listing", articles_path, class: "text-decoration-none"%>
    </div>

</div>